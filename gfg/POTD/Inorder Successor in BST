class Solution{
  public:
    Node * inOrderSuccessor(Node *root, Node *p)
    {
        if (root == NULL || p == NULL) return NULL;  
        Node *suc = NULL;
        while (root != NULL)
        {
            if (root->data <= p->data)
                root = root->right;
            else
            {
                suc = root;
                root = root->left;
            }
        }
        return suc;
    }
};
